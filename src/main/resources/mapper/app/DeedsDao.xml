    <select id="queryDeedsEntityById" parameterType="java.lang.String" resultType="io.renren.modules.app.entity.story.DeedsEntity">
        select * from t_deeds_info t where t.deeds_id = #{deedsId}
    </select>

    <select id="queryDeedsEntityByUserId" parameterType="java.lang.String" resultType="io.renren.modules.app.dto.DeedsDto">
        select t.title as title,t.context as context ,t.deeds_Id as deedsId,t.image_url as imageUrl,t.read_count as readCount,t.is_open as isOpen from t_deeds_info t  where t.user_id = #{userId}
    </select>

